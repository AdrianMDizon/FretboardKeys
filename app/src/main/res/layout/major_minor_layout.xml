<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/majorMinorLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/accNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num_placeholder"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/accType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sharps"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/accNum"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/majorKeyLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_placeholder"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"
        android:layout_marginStart="160dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/majorInd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Major"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/majorKeyLetter"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/minorKeyLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_placeholder"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="50dp"
        android:layout_marginStart="320dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/minorInd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="@string/Minor"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/minorKeyLetter"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>